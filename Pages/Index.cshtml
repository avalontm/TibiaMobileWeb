@page
@model TibiaMobileWeb.Views.Home.IndexModel
@using TibiaMobileWeb.DataBase.Tables;

@{
    Layout = "_Layout";
    int index = 0;
}

<div class="page-section">
    <div class="page-header">
        <h2>Estadisticas</h2>
    </div>
   
    <table>
        <thead>
            <tr>
                <th>
                    Rango
                </th>
                <th>
                    Outfit
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    Level
                </th>
                <th>
                    Experiencia
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (Players player in Model.players)
            {
                index++;
                <tr>
                    <td>
                        <p>@index</p>
                    </td>
                    <td>
                        <img src="/image/outfit?look=@player.look&head=@player.head&body=@player.body&legs=@player.legs&feet=@player.feet"/>
                    </td>
                    <td>
                      <a href="/player/@player.name"><p><b>@player.name</b></p></a>  
                    </td>
                    <td>
                        <p>@player.level</p>
                    </td>
                    <td>
                        <p>@player.experience</p>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
